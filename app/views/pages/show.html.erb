<div class="page">
  <h2 id="name">
    Phil Zheng
  </h2>

<div class=box-shadow>
  <div class="page__header">
    Search Term
  </div>
</div>

  <div class="tabs">
    <div class="tab-menu">
      <div class="tab-menu__item selected" target="#page1">ACCORDIAN</div>
      <div class="tab-menu__item" target="#page2">GRAPH</div>
    </div>
  
    <div class="tab-content " id="page1">
      <div class="card box-shadow">
        <% @videos["items"].each do |videos| %>
        <div class="item-wrapper">
          <div class="list-item">
            <div class="top section">
              <p class="title"> <%= videos["snippet"]["title"] %> </p>
              <p class="channel"> <%= videos["snippet"]["channelTitle"] %> </p>
              <p class="pub-date"> <%= DateTime.parse(videos["snippet"]["publishedAt"]).strftime("%B %e, %Y") %> </p>
            </div>
            
            <div class="mid section">
              <div class="thumbnail-wrapper">
                <img class="thumbnail" src=<%=videos["snippet"]["thumbnails"]["default"]["url"]%> alt="video-thumbnail">
              </div>
              <div class="desc-wrapper">
                <p class="subtitle">DESCRIPTION</p>
                <p class="description" style="white-space: pre-line"> <%= videos["snippet"]["description"] %> </p>
              </div>
            </div>

            <div class="bot section">
              <p class="subtitle">VIEW COUNT</p>
              <p class="subtitle">LIKE COUNT</p>
              <p class="subtitle">TAGS</p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  
    <div class="tab-content hidden" id="page2">
      <div class="card box-shadow">
        page2
      </div>
    </div>
  </div>

  <footer>

  </footer>

</div>
